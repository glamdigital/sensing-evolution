<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.ac.ox.museums.sensingevolution" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Sensing Evolution</name>
    <description>
        A test app for ibeacon functionality
    </description>
    <author email="dev@cordova.apache.org" href="http://www.it.ox.ac.uk">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />

    <gap:plugin name="com.unarin.cordova.beacon" version="3.2.1" />
    <gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
    <gap:plugin name="org.apache.cordova.vibration" version="0.3.11" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />

    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />

    <feature name="http://api.phonegap.com/1.0/geolocation" />

    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <true/>
    </gap:config-file>

    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" overwrite="true">
        <false/>
    </gap:config-file>

    <gap:config-file platform="ios" parent="UISupportedInterfaceOrientations~ipad" overwrite="false">
        <array>
            <string>UIInterfaceOrientationLandscapeLeft</string>
            <string>UIInterfaceOrientationLandscapeRight</string>
        </array>
    </gap:config-file>

    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" overwrite="true">
    <false/>
    </gap:config-file>

    <platform name="android">
        <!-- you can use any density that exists in the Android project -->
        <splash src="packaging/splash/Android-LDPI-Landscape.png" density="land-ldpi"/>
        <splash src="packaging/splash/Android-HDPI-Landscape.png" density="land-hdpi"/>
        <splash src="packaging/splash/Android-MDPI-Landscape.png" density="land-mdpi"/>
        <splash src="packaging/splash/Android-XHDPI-Landscape.png" density="land-xhdpi"/>
        <splash src="packaging/splash/Android-XXHDPI-Landscape.png" density="land-xxhdpi"/>
        <splash src="packaging/splash/Android-XXXHDPI-Landscape.png" density="land-xxxhdpi"/>
        <splash src="packaging/splash/Android-LDPI-Portrait.png" density="port-ldpi"/>
        <splash src="packaging/splash/Android-HDPI-Portrait.png" density="port-hdpi"/>
        <splash src="packaging/splash/Android-MDPI-Portrait.png" density="port-mdpi"/>
        <splash src="packaging/splash/Android-XHDPI-Portrait.png" density="port-xhdpi"/>
        <splash src="packaging/splash/Android-XXHDPI-Portrait.png" density="port-xxhdpi"/>
        <splash src="packaging/splash/Android-XXXHDPI-Portrait.png" density="port-xxxhdpi"/>
        <icon src="packaging/icons/AppIcon36x36.png" density="ldpi" />
        <icon src="packaging/icons/AppIcon48x48.png" density="mdpi" />
        <icon src="packaging/icons/AppIcon72x72.png" density="hdpi" />
        <icon src="packaging/icons/AppIcon96x96.png" density="xhdpi" />
        <icon src="packaging/icons/AppIcon144x144.png" density="xxhdpi" />
        <icon src="packaging/icons/AppIcon192x192.png" density="xxxhdpi" />
    </platform>

    <platform name="ios">
        <!-- images are determined by width and height. The following are supported -->
        <splash src="packaging/splash/iPhone4-Portrait.png" width="320" height="480"/>
        <splash src="packaging/splash/iPhone4-Landscape.png" width="480" height="320"/>
        <splash src="packaging/splash/iPhone4-Portrait@2x.png" width="640" height="960"/>
        <splash src="packaging/splash/iPhone4-Landscape@2x.png" width="960" height="640"/>
        <splash src="packaging/splash/iPhone5-Portrait.png" width="640" height="1136"/>
        <splash src="packaging/splash/iPhone5-Landscape.png" width="1136" height="640"/>
        <splash src="packaging/splash/iPhone6-Portrait.png" width="750" height="1334"/>
        <splash src="packaging/splash/iPhone6-Landscape.png" width="1334" height="750"/>
        <splash src="packaging/splash/iPhone6plus-Portrait.png" width="1242" height="2208"/>
        <splash src="packaging/splash/iPhone6plus-Landscape.png" width="2208" height="1242"/>
        <splash src="packaging/splash/iPad-Portrait.png" width="768" height="1024"/>
        <splash src="packaging/splash/iPad-Portrait@2x.png" width="1536" height="2048"/>
        <splash src="packaging/splash/iPad-Landscape.png" width="1024" height="768"/>
        <splash src="packaging/splash/iPad-Landscape@2x.png" width="2048" height="1536"/>
        <icon src="packaging/icons/iPad-76@2x.png" width="152" height="152" />
        <icon src="packaging/icons/iPad-76.png" width="76" height="76" />
        <icon src="packaging/icons/iPad-29.png" width="29" height="29" />
        <icon src="packaging/icons/iPad-40.png" width="40" height="40" />
        <icon src="packaging/icons/iPhone-60@2x.png" width="120" height="120" />
        <icon src="packaging/icons/iPhone-60@3x.png" width="180" height="180" />
        <icon src="packaging/icons/iPhone-40@2x.png" width="80" height="80" />
        <icon src="packaging/icons/iPhone-29@3x.png" width="87" height="87" />
        <icon src="packaging/icons/iPhone-29@2x.png" width="58" height="58" />
        
    </platform>
</widget>
